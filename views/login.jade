extends layout

block content
  div.container
    input#authrequired(type="hidden", value="#{authrequired}")
    .row
      .span5.offset4
        .well
          legend Sign in to NLMS
          form(method='POST', action='', accept-charset='UTF-8')
            .alert.alert-error#login-error
                a.close(data-dismiss='alert', href='#') x
                span
                  | Incorrect Username or Password!
            input.input-block-level(placeholder='Username', type='text', name='username')
            input.input-block-level(placeholder='Password', type='password', name='password')
            label.checkbox
              input(type='checkbox', name='remember', value='1')
              | Remember Me
            button.btn-info.btn.btn-block(type='submit') Login

